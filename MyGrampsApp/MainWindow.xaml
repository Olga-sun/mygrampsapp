<Window x:Class="MyGrampsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Генеалогічне дерево - Головна" Height="600" Width="1000"
        WindowStyle="None" AllowsTransparency="True" Background="White">
    <DockPanel>
        <Grid DockPanel.Dock="Top" Background="#F8F9FA" Height="40" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                <TextBlock Text="🌳" FontSize="18" Margin="0,0,5,0"/>
                <TextBlock Text="Генеалогічне дерево — Головна" FontSize="14" FontWeight="SemiBold" Foreground="#333333"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="—" Width="45" Background="Transparent" BorderThickness="0" Click="btnMinimize_Click" Cursor="Hand"/>
                <Button Content="▢" Width="45" Background="Transparent" BorderThickness="0" Click="btnMaximize_Click" Cursor="Hand"/>
                <Button Content="✕" Width="45" Background="Transparent" BorderThickness="0" Click="btnClose_Click" Cursor="Hand" Foreground="Red"/>
            </StackPanel>
        </Grid>
        <Menu DockPanel.Dock="Top" Background="#F8F9FA" Padding="5" BorderThickness="0">
            <Menu.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="Padding" Value="15,10"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </Menu.Resources>

            <MenuItem Header="➕ Введення інформації" Background="#E3F2FD">
                <MenuItem Header="Реєстрація особи" Click="btnAddPerson_Click"/>
                <MenuItem Header="Додавання документів" Click="btnAddDocument_Click"/>
                <MenuItem Header="Встановлення зв'язків" Click="btnAddKinship_Click"/>
            </MenuItem>

            <MenuItem Header="🔍 Пошук та фільтрація" Background="#F1F8E9">
                <MenuItem Header="Пошук за ПІБ" Click="btnSearch_Click"/>
                <MenuItem Header="Фільтр за місцем" Click="btnFilterPlace_Click"/>
                <MenuItem Header="Переглянути документи" Click="btnShowDocs_Click" Background="#FFF9C4"/>
            </MenuItem>

            <MenuItem Header="📄 Генерація звітів" Background="#FFF3E0">
                <MenuItem Header="Побудова дерева" Click="btnBuildTree_Click"/>
                <MenuItem Header="Статистика життя" Click="btnStats_Click"/>
                <MenuItem Header="Біографічна картка" Click="btnBio_Click"/>
            </MenuItem>
        </Menu>

        <Grid Margin="10">
            <DataGrid x:Name="dgPeople" 
                      AutoGenerateColumns="True" 
                      IsReadOnly="True" 
                      Background="White"
                      AlternatingRowBackground="#F2F2F2"/>
        </Grid>
    </DockPanel>
</Window>