<Window x:Class="MyGrampsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGrampsApp"
        mc:Ignorable="d"
        Title="Генеалогічне дерево - Головна" Height="500" Width="900">
    <Grid Grid.Column="1" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <Border Background="#E3F2FD" CornerRadius="10" Padding="15">
                <StackPanel>
                    <TextBlock Text="Введення інформації" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <Button Content="➕ Реєстрація особи" Height="50" Margin="0,5" Click="btnAddPerson_Click"/>
                    <Button Content="📄 Додавання документів" Height="50" Margin="0,5" Click="btnAddDocument_Click"/>
                    <Button Content="🔗 Встановлення зв'язків" Height="50" Margin="0,5" Click="btnAddKinship_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10">
            <Border Background="#F1F8E9" CornerRadius="10" Padding="15">
                <StackPanel>
                    <TextBlock Text="Пошук та фільтрація" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <Button Content="🔍 Пошук за ПІБ" Height="50" Margin="0,5" Click="btnSearch_Click"/>
                    <Button Content="📍 Фільтр за місцем" Height="50" Margin="0,5" Click="btnFilterPlace_Click"/>
                    <Button Content="👁 Переглянути документи" Height="50" Margin="0,5" Click="btnShowDocs_Click" Background="#FFF9C4"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Column="2" Margin="10">
            <Border Background="#FFF3E0" CornerRadius="10" Padding="15">
                <StackPanel>
                    <TextBlock Text="Генерація звітів" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <Button Content="🌳 Побудова дерева" Height="50" Margin="0,5" Click="btnBuildTree_Click"/>
                    <Button Content="📊 Статистика життя" Height="50" Margin="0,5" Click="btnStats_Click"/>
                    <Button Content="🗂 Біографічна картка" Height="50" Margin="0,5" Click="btnBio_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>