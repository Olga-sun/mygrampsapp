<Window x:Class="MyGrampsApp.AddDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGrampsApp"
        mc:Ignorable="d"
        Title="Додавання нового документа" Height="500" Width="450" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Назва документа:"/>
        <TextBox x:Name="txtTitle" Margin="0,0,0,10" Height="25"/>

        <TextBlock Text="Вид документа (напр. Свідоцтво, Лист):"/>
        <ComboBox x:Name="cbKind" Margin="0,0,0,10" IsEditable="True">
            <ComboBoxItem Content="Свідоцтво про народження"/>
            <ComboBoxItem Content="Свідоцтво про шлюб"/>
            <ComboBoxItem Content="Військовий квиток"/>
            <ComboBoxItem Content="Фотографія"/>
        </ComboBox>

        <TextBlock Text="Дата документа:"/>
        <DatePicker x:Name="dpCreatedDate" Margin="0,0,0,10"/>

        <TextBlock Text="Шлях до файлу:"/>
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="txtFileUri" Grid.Column="0" IsReadOnly="True" VerticalContentAlignment="Center"/>
            <Button Content="📁 Обзор" Grid.Column="1" Width="60" Margin="5,0,0,0" Click="btnBrowse_Click"/>
        </Grid>

        <TextBlock Text="Зміст або опис:"/>
        <TextBox x:Name="txtDocumentText" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,20"/>

        <Button Content="💾 Зберегти документ" Height="40" Click="btnSave_Click" Background="LightBlue" FontWeight="Bold"/>
    </StackPanel>
</Window>
