<Window x:Class="MyGrampsApp.Views.FamilyTreeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Родинне дерево" Height="700" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="White"
        WindowStartupLocation="CenterOwner">

    <DockPanel>
        <Grid DockPanel.Dock="Top" Background="#F8F9FA" Height="40" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                <TextBlock Text="🌳" FontSize="18" Margin="0,0,5,0"/>
                <TextBlock Text="Родинне дерево" FontSize="14" FontWeight="SemiBold" Foreground="#333333"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="✕" Width="45" Background="Transparent" BorderThickness="0" 
                        Click="btnClose_Click" Cursor="Hand" Foreground="Red" FontSize="16"/>
            </StackPanel>
        </Grid>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Структура вашого роду" FontSize="22" FontWeight="Light" 
                       Foreground="#2C3E50" Margin="0,0,0,20"/>

            <Border Grid.Row="1" Background="#FFFFFF" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0">
                <TreeView x:Name="tvFamilyTree" BorderThickness="0" Background="Transparent" Padding="10">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <Border Margin="2" Padding="8,4" Background="#F1F8E9" CornerRadius="4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👤" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding FullName}" FontSize="14" Foreground="#2E7D32" 
                                             VerticalAlignment="Center" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Border>
        </Grid>
    </DockPanel>
</Window>