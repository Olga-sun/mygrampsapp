<Window x:Class="MyGrampsApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вхід у систему" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Логін:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Height="30" Margin="0,0,0,15"/>

            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Height="30" Margin="0,0,0,20"/>

            <Button Content="Увійти" Height="35" Click="btnLogin_Click" Margin="0,0,0,10" Background="LightBlue"/>
            <Button Content="Зареєструватися" Height="35" Click="btnRegister_Click" Background="Transparent" BorderThickness="0" Foreground="Blue" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>